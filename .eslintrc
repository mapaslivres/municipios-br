{
    "extends": ["standard"],
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": [2, "always"],
      "no-console": 2,
      "no-extra-semi": 2,
      "semi-spacing": [2, { "before": false, "after": true }],
      "prefer-promise-reject-errors": 0
    }
  }
  